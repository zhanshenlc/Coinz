<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#0eafa5" />
            <gradient android:angle="-90" android:startColor="#3d9993" android:endColor="#7c9b99"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1a7c76" />
            <solid android:color="#5c827f"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#31f9ec" />
            <gradient android:angle="-90" android:startColor="#87f2eb" android:endColor="#d2f2f0" />
        </shape>
    </item>
</selector>