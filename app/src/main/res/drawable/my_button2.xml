<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#178bad" />
            <gradient android:angle="-90" android:startColor="#265074" android:endColor="#13f5da" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#84e79d" />
            <solid android:color="#b2d8c5"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#84e79d" />
            <gradient android:angle="-90" android:startColor="#4ed2ae" android:endColor="#b2d8c5"  />
        </shape>
    </item>
</selector>
